[user]
    email = {{ .email }}
    name = Ingo Unterweger
{{- if .gitSigningKey }}
    signingKey = {{ .gitSigningKey }}

[commit]
    gpgsign = true
{{- end }}

[alias]
    ci = commit
    st = status

[pull]
    default = current
    rebase = true

[push]
    default = current
    autoSetupRemote = true
    followTags = true

[fetch]
    prune = true

[diff]
	wsErrorHighlight = all

[includeIf "gitdir:~/projects/"]
	path = ~/.projects.gitconfig
